server {
    server_name nexus.lptdevops.website;
    location / {
        proxy_pass https://192.168.100.100:8081;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/nexus.lptdevops.website/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/nexus.lptdevops.website/privkey.pem;

}

server {
    if ($host = nexus.lptdevops.website) {
        return 301 https://$host$request_uri;
    }
    listen 80;
    server_name nexus.lptdevops.website;
    return 404;
}
