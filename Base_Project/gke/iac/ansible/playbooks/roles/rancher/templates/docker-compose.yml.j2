services:
  rancher-server:
    image: rancher/rancher:v2.9.2
    container_name: rancher
    restart: unless-stopped
    ports:
      - "443:443"
      - "80:80"
    volumes:
      - rancher-data:/var/lib/rancher
    privileged: true
    command:
      - --no-cacerts
    environment:
      - CATTLE_AGENT_TLS_MODE=system-store
    networks:
      - PrviNetwork
volumes:
  rancher-data:

networks:
  PrviNetwork:
    external: true
