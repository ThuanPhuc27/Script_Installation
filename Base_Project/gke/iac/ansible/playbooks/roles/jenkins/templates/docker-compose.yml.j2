services:
  jenkins:
    image: thuanlp/jenkins_with_docker
    privileged: true
    user: root
    ports:
      - "8080:8080"
      - "50000:50000"
    container_name: jenkins
    volumes:
      - jenkins-data:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
      - /usr/local/bin/docker:/usr/local/bin/docker
    restart: unless-stopped
    networks:
      - PrviNetwork

volumes:
  jenkins-data:

networks:
  PrviNetwork:
    external: true
